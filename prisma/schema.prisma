// Prisma Schema for Mini SaaS Dashboard
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// Project status enum
enum Status {
  ACTIVE
  ON_HOLD
  COMPLETED
}

/// Project model - represents a project in the dashboard
model Project {
  id         String   @id @default(cuid())
  name       String   @db.VarChar(100)
  status     Status   @default(ACTIVE)
  deadline   DateTime
  assignedTo String   @db.VarChar(100)
  budget     Decimal  @db.Decimal(12, 2)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([status])
  @@index([deadline])
  @@index([name])
}
